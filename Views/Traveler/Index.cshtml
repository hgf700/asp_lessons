@model IEnumerable<aspapp.Models.Traveler>

@{
    ViewData["Title"] = "Lista podróżników";
}

<h2>Lista podróżników</h2>

<table class="table">
    <thead>
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Email</th>
            <th>Data urodzenia</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var traveler in Model)
        {
            <tr>
                <td>@traveler.Firstname</td>
                <td>@traveler.Lastname</td>
                <td>@traveler.Email</td>
                <td>@traveler.BirthDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateTraveler" class="btn btn-primary">Dodaj nowego podróżnika</a>
